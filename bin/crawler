#!/usr/bin/env node

/**
 * Module dependencies.
 */

var models = require('../build/models').default
var crawler = require('../build/crawler').default

crawler(models, {
  sameOrigin: true,
  maxDepth: 4,
  rssFeed: true,
  maxThreads: 8,
  crawlCards: true,
  maxRequest: process.env.NODE_ENV === 'production' ? -1 : 100,
  skipStrictDuplicates: true
})
